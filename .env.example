# Project Recall - Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# APPLICATION SETTINGS
# ======================
NODE_ENV=development
DEBUG=recall:*

# ======================
# SERVER CONFIGURATION
# ======================
PORT=3001
BACKEND_PORT=3001
FRONTEND_PORT=5173
NGINX_PORT=80
NGINX_SSL_PORT=443

# ======================
# SUPABASE CONFIGURATION
# ======================
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Frontend Supabase (for Vite)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_API_URL=http://localhost:3001

# ======================
# DATABASE CONFIGURATION
# ======================
# PostgreSQL (if using local database instead of Supabase)
POSTGRES_DB=recall_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/recall_db

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# ======================
# AI SERVICES
# ======================
# Cohere AI for flashcard generation
COHERE_API_KEY=your_cohere_api_key

# ======================
# FILE UPLOAD SETTINGS
# ======================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,docx,txt,jpg,jpeg,png

# ======================
# SECURITY SETTINGS
# ======================
JWT_SECRET=your_super_secret_jwt_key_here
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# EMAIL CONFIGURATION
# ======================
# For production email sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yourapp.com

# ======================
# MONITORING & LOGGING
# ======================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
GRAFANA_PASSWORD=your_grafana_password

# ======================
# DOCKER CONFIGURATION
# ======================
DOCKER_VOLUME_MODE=rw
COMPOSE_PROJECT_NAME=recall

# ======================
# DEVELOPMENT TOOLS
# ======================
# Development database admin tools
PGADMIN_DEFAULT_EMAIL=admin@recall.dev
PGADMIN_DEFAULT_PASSWORD=admin

# ======================
# PRODUCTION SETTINGS
# ======================
# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# CDN Configuration (for production)
CDN_URL=https://your-cdn.com

# Analytics (for production)
GOOGLE_ANALYTICS_ID=GA_TRACKING_ID

# ======================
# FEATURE FLAGS
# ======================
ENABLE_REGISTRATION=true
ENABLE_FILE_UPLOAD=true
ENABLE_AI_GENERATION=true
ENABLE_COMMUNITY_FEATURES=true
ENABLE_ANALYTICS=true