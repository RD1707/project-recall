{
  "name": "project-recall-backend",
  "version": "1.0.0",
  "description": "Backend for Project Recall",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "prebuild": "npm run clean",
    "prestart": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "socket.io": "^4.7.0",
    "@supabase/supabase-js": "^2.0.0",
    "winston": "^3.8.0",
    "zod": "^3.22.0",
    "pdf-parse": "^1.1.1",
    "youtube-transcript": "^1.2.1",
    "bullmq": "^4.0.0",
    "ioredis": "^5.3.0",
    "uuid": "^9.0.0",
    "mammoth": "^1.6.0",
    "tesseract.js": "^4.1.0",
    "multer": "^2.0.2",
    "cohere-ai": "^7.0.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "rimraf": "^5.0.5"
  },
  "keywords": ["flashcards", "spaced-repetition", "study"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}